@model MyDrive.ViewModels.CreateRoleViewModel
@{
    ViewBag.Title = "CreateRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Role</h2>

@using(Html.BeginForm("CreateRolePost", "Administration"))
{ 
    <div class="form-group">
        @Html.LabelFor(m => Model.RoleName)
        @Html.TextBoxFor(m => Model.RoleName, new {@class = "form-control"})
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}