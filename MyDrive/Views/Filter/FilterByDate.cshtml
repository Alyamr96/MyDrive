@model List<MyDrive.Models.FileModel>
@{
    ViewBag.Title = "FilterByDate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Filter By Date</h2>

<table id="myFiles" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>File Name</th>
            <th>File Path</th>
            <th>File Upload Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            string PathNormalized = "";
            for (int i = 0; i < item.Path.Length; i++)
            {
                string test = item.Path.Substring(i, 5);
                if (test.CompareTo("Files") == 0)
                {
                    int number = i + 6;
                    PathNormalized = item.Path.Substring(number);
                    break;
                }
            }
             <tr>
                 <td>@item.Name</td>
                 <td>Home\@PathNormalized</td>
                 <td>@item.Date</td>
             </tr>
            
        }
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#myFiles").DataTable();
        })
    </script>
}