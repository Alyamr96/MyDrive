@model MyDrive.Models.Folder
@{
    ViewBag.Title = "GetFolders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>

    ul {
        list-style: none;
    }

        ul .myFolders {
            display: block;
            float: left;
            margin-right: 1%;
            width: 24%
        }

    i {
        font-size: 100px;
        color: #CC5500;
    }

    ul .myFolders a span {
        color: black;
        margin-right: 120px;
        font-size: 10px;
        text-align: center;
        padding-top: 1px;
        display: block;
        text-transform: uppercase;
        font-family: Arial, Helvetica, sans-serif;
        letter-spacing: 1px;
    }
</style>

<!--<h2>Folders</h2>-->

<p>
    <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#createFolderModal">Create Folder</a>
</p>

@using (Html.BeginForm("CreateFolderInPath", "Files"))
{
    <div class="modal fade" id="createFolderModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title">Create Folder</h2>
                </div>
                <div class="modal-body">
                    <form id="createFolderModal">
                        <label>Folder Name</label>
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    </form>
                </div>
                <div class="modal-footer">
                    <div class="btn-group">
                     <!-- <a href="~/Files/CreateFolderInPath/" class="btn btn-primary">Create Folder</a> -->
                         <button type="submit" class="btn btn-primary">Create</button> 
                    </div>
                </div>
            </div>
        </div>
    </div>


    <ul>

        @foreach (var folderName in ViewBag.directories)
        {

            <li class="myFolders"><a href="/Files/GetFoldersByPath/@folderName"> <i class="fas fa-folder"></i><span>@folderName</span></a></li>
        }
    </ul>
}