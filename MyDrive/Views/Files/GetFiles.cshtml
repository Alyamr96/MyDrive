<table class="table table-bordered table-hover">
    <tr>
        <th>Name</th>
        <th>Id</th>
        <th>Delete</th>
    </tr>

    @for (int i = 0; i < Model.name.Length; i++)
    {
        int j = i + 1;
        <tr>
            <td>@Model.name[i]</td>
            <td>@j</td> 
            <td><button>@Html.ActionLink("Delete", "DeleteFile", "Files", new { Id = i }, null)</button></td>
        </tr>
    }
</table>



