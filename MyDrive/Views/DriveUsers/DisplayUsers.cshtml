@model IEnumerable<MyDrive.Models.ApplicationUser>
@{
    ViewBag.Title = "DisplayUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Users</h2>

    <table id="myusers" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>Phone Number</th>
                @if (User.IsInRole("CanManageUsers"))
            {
                <th>Delete</th>
            }
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                if (item.Email != "admin@mydrive.com")
                {
            <tr>
                <td>@item.FirstName</td>
                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td><span>0</span>@Html.DisplayFor(modelItem => item.PhoneNumberInt)</td>
                @if (User.IsInRole("CanManageUsers"))
                {
                    <td><a href="#">Delete</a></td>
                }
            </tr>
                }
            }
        </tbody>
    </table>

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#myusers").DataTable();
        })
    </script>
}